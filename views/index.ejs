<html>
    <head>
        <!-- load cdn style -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/css/xeditable.min.css">

        <!-- load app style -->
        <link type="text/css" rel="stylesheet" href="public/css/style.css" >

        <!-- load cdn scripts -->
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.32/angular.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/js/xeditable.min.js"></script>

        <!-- load app -->
        <script src="public/js/main/app.js"></script>
        <script src="public/js/main/services/svTodos.js"></script>
        
        <title>
            My tasks (from Node + Angular)
        </title>
    </head>
    <body ng-app="app.todos" ng-controller="todoController">
        
        <div class="container">
            <div class="jumbotron"> 
                <h1> {{ appName }} <span class="label label-info">{{ todos.length }}</span> </h1>
            </div>
            
            <div id="todo-list" class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="checkbox" ng-repeat="todo in todos">
                        <label>
                            <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                            <a href ng-click="deleteTodo(todo)"><i class="fa fa-remove icon-remove" ></i></a>
                            <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>
                            <span ng-class="{strike: todo.isDone}" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)">{{todo.text}}</span>
                        </label>
                    </div>
                    <p class="text-center" ng-show="loading">
                        <span class="fa fa-spinner fa-spin fa-3x"></span>
                    </p>
                </div>
            </div>

            <div id="todo-form" class="row">
                <div class="col-sm-8 col-sm-offset-2 text-center">
                    <form>
                        <div class="form-group">
                            <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="What do you do to do?">
                        </div>
                
                        <button type="submit" class="btn btn-primary btn-lg" ng-disabled="!formData.text" ng-click="createTodo()">Add</button>
                    </form>
                </div>
            </div>
            
        </div>
    </body>
</html>